<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
      android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text"
        android:padding="10dp"
        android:layout_margin="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/satu"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Tes Minat"/>
            <TextView
                android:id="@+id/dua"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/satu"
                android:text="1. Soal terdiri dari 120 butir"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="2. Jawab sesuai dengan keadaan anda"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="3. Waktu setiap soal 10 detik"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:text="4. Tekan Mulai untuk memulai tes minat"/>
        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/btnMulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="19dp"
        android:background="@color/bg"
        android:onClick="pindah"
        android:visibility="visible"
        android:text="MULAI TES MINAT"
        android:textColor="@color/text"
        />
</RelativeLayout>